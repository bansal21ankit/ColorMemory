<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/high_score_rank"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:textAppearance="@style/HighScore.Title"
            android:padding="@dimen/activity_padding"
            android:text="@string/high_score_rank"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/high_score_name"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:textAppearance="@style/HighScore.Title"
            android:padding="@dimen/activity_padding"
            android:text="@string/high_score_name"
            android:layout_weight="1"
            android:gravity="center" />

        <View
            android:layout_width="@dimen/divider"
            android:layout_height="match_parent"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/high_score_score"
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:textAppearance="@style/HighScore.Title"
            android:padding="@dimen/activity_padding"
            android:text="@string/high_score_score"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@android:color/black" />
</LinearLayout>
